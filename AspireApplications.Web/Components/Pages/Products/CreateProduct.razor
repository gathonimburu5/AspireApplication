@page "/product/create"
@rendermode InteractiveServer
<PageTitle>Created Product</PageTitle>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Create New Product Records</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Product</a></li>
                        <li class="breadcrumb-item active">New Record</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <EditForm Model="@product" FormName="create-product" OnValidSubmit="SaveProductRecords">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row mb-2">
                            <div class="col-6">
                                <label class="form-label">Product Name</label>
                                <InputText class="form-control" @bind-Value="product.ProductName" placeholder="enter product name" required />
                                <ValidationMessage For="() => product.ProductName" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Description</label>
                                <InputText class="form-control" @bind-Value="product.Description" placeholder="enter product descriptions" required />
                                <ValidationMessage For="() => product.Description" />
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-6">
                                <label class="form-label">Product Quantity</label>
                                <InputNumber class="form-control" @bind-Value="product.Quantity" placeholder="enter product quantity" required />
                                <ValidationMessage For="() => product.Quantity" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Product Price</label>
                                <InputNumber class="form-control" @bind-Value="product.Price" placeholder="enter product price" required />
                                <ValidationMessage For="() => product.Price" />
                            </div>
                        </div>

                        <div class="col-12 mt-3">
                            <div class="text-end">
                                <button class="btn btn-outline-primary" type="submit">Save Records <span class="fa fa-database">&nbsp;</span></button>
                                <a class="btn btn-outline-danger" href="/product">Cancel</a>
                            </div>
                        </div>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
</div>




